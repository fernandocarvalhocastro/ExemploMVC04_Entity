@model Fiap.Exemplo04.MVC.Models.Time
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Time</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(t => t.Nome)
        @Html.TextBoxFor(t => t.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(t => t.DataFundacao)
        @Html.TextBoxFor(t => t.DataFundacao, new { @class = "form-control"})
    </div>
    <fieldset>
        <legend>Técnico</legend>
        <div class="form-group">
            @Html.LabelFor(t => t.Tecnico.Nome)
            @Html.TextBoxFor(t => t.Tecnico.Nome, new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.Tecnico.NumeroTitulos)
            @Html.TextBoxFor(t => t.Tecnico.NumeroTitulos, new { @class = "form-control"})
        </div>
    </fieldset>
    <input type="submit" value="Salvar" class="btn btn-primary" />
}

