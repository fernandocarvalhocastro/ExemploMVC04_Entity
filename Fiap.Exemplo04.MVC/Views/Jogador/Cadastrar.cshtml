@model Fiap.Exemplo04.MVC.Models.Jogador
@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro de Jogador</h2>
@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(c=>c.Nome , new {@class="form-control", placeholder="Digite o nome do jogador"})       
    </div>
    <div class="form-group">
        @Html.LabelFor(c=>c.DataNascimento)
        @Html.TextBoxFor(c=>c.DataNascimento, new { @class="form-control", placeholder="dd/MM/yyyy" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Time)
        @Html.DropDownListFor(c => c.TimeId,
                        ViewBag.times as SelectList, "Selecione", new { @class = "form-control" })
    </div>
    <input type="submit" value="Salvar" class="btn btn-primary" />
}

